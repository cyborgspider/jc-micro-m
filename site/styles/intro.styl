/* Second Intro */
#intro
  text-align center
  position   relative
  overflow   hidden
  height     540px

  h1
    font-size     45px
    margin-bottom 10px
  h2
    font-size     28px
    font-weight   400
    margin-bottom 24px
  h3
    font-size     22px
    margin-bottom 18px

.divide
  background url(../img/divide.png) no-repeat center top
  width      752px
  height     20px
  margin     0 auto 18px

.video-container
  position   absolute
  height     100%
  width      100%
  overflow   hidden
  background $blue-main-dark

.video-screen
  position   absolute
  top        0
  left       0
  width      100%
  height     100%
  background url(../img/pattern-screen.png)
  z-index    2

#video
  min-width  100%
  min-height 100%

#intro-slider
  background url(../img/bg-diamond.png) 50% 50% no-repeat
  position   absolute
  height     100%
  top        0
  left       0
  right      0
  bottom     0
  z-index    3
