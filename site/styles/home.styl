#home
  background      url(../img/bg-los-angeles.jpg) no-repeat center top transparent
  background-size cover
  padding         240px 0 0
  opacity         0
  position        relative

#main-intro-wrap
  margin    0 auto
  width     100%
  position  relative
  top       30%
  transform translateY(-30%)

#main-intro-header
  text-align center
  opacity    0

  h1
    font-size 45px
  h2
    font-size 22px

#main-intro-bar
  background #fff
  width      0
  height     1px
  margin     34px auto

#main-intro-slider
  max-width  660px
  margin     0 auto 80px
  opacity    0
  text-align center

  p
    font-size 18px
