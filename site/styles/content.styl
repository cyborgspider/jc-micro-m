.bg-testimony
  background #001f3c
  padding    80px 0
  height     400px

.bg-split
  background url(../img/bg-split.png) repeat-y top center

.bg-split-alt
  background url(../img/bg-split-alt.png) repeat-y top center

.bg-form
  background url(../img/bg-form.png) repeat-y top center

.bg-fbar
  background      url(../img/bg-fbar.jpg) top center no-repeat
  background-size cover

.bg-fatca
  background      url(../img/bg-fatca.jpg) top center no-repeat
  background-size cover

.bg-ovdp
  background      url(../img/bg-fbar.jpg) top center no-repeat
  background-size cover

.bg-streamlined
  background      url(../img/bg-streamlined.png) top center no-repeat
  background-size cover

.bg-disclosure
  background      url(../img/bg-disclosure.jpg) top center no-repeat
  background-size cover

.content
  padding  60px 0 40px 0
  overflow hidden

  &.left
    padding-right 60px
    padding-left  60px
  &.right
    padding-left 40px
  &.content-text
    padding-top 40px

  h1
    font-size      60px
    margin-bottom  12px
    margin-top     -10px
    text-transform uppercase
  h2
    font-size     18px
    padding-left  12px
    border-left   3px solid #fff
    margin-bottom 24px
  h3
    font-size     24px


.content-items
  display table
  padding 60px

.content-item
  padding        0 25px
  border-right   1px solid #00284c
  border-left    1px solid #0061bb
  float          none
  display        table-cell
  vertical-align top

  &:first-child
    border-left  none
    padding-left 0

  &:last-child
    border-right  none
    padding-right 0

  h4
    font-size   24px
    font-weight 400
    color       $blue-gray

    & > span
      color       #fff
      font-weight 700

  a
    color       #fff
    font-size   12px
    line-height 1.4
    width       70%
    display     inline-block

  .fa-twitter
    font-size    38px
    color        $blue-gray
    float        left
    margin-right 20px



.section
  clear both

  &:before
    content     ''
    display     block
    margin-top  -75px
    padding-top 75px
